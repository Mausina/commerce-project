<div class="hero-section text-white text-center py-5">
  <div class="container">
    <h1 class="display-4">Welcome to TechStore</h1>
    <p class="lead">Your one-stop shop for PC components and hardware</p>
    <a href="/shop" class="btn btn-primary btn-lg">Shop Now</a>
  </div>
</div>

<div class="container my-5">
  <h2 class="text-center mb-4">Featured Products</h2>
  <div class="row">
    {{#each featuredProducts}}
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <div class="card h-100">
        <div class="card-img-placeholder bg-secondary text-white d-flex align-items-center justify-content-center"
          style="height: 200px;">
          <span>{{this.name}}</span>
        </div>
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="fw-bold text-primary">€{{this.price}}</p>
          <button class="btn btn-primary w-100 add-to-cart" data-id="{{this.id}}" data-name="{{this.name}}"
            data-price="{{this.price}}">
            Add to Cart
          </button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div class="container my-5">
  <div class="row">
    <div class="col-md-4 text-center mb-4">
      <h3>Fast Delivery</h3>
      <p>Free shipping on orders over €100</p>
    </div>
    <div class="col-md-4 text-center mb-4">
      <h3>Secure Payment</h3>
      <p>100% secure payment processing</p>
    </div>
    <div class="col-md-4 text-center mb-4">
      <h3>24/7 Support</h3>
      <p>We're here to help anytime</p>
    </div>
  </div>
</div>