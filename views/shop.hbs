<div class="container my-4">
  <h1 class="mb-4">Shop</h1>

  <div class="row">
    <div class="col-lg-3 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Categories</h5>
          <ul class="list-unstyled">
            <li><a href="#" class="text-decoration-none">Graphics Cards</a></li>
            <li><a href="#" class="text-decoration-none">Processors</a></li>
            <li><a href="#" class="text-decoration-none">Memory</a></li>
            <li><a href="#" class="text-decoration-none">Storage</a></li>
            <li><a href="#" class="text-decoration-none">Motherboards</a></li>
            <li><a href="#" class="text-decoration-none">Power Supplies</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-lg-9">
      <div class="mb-3 d-flex justify-content-between align-items-center">
        <span>Showing {{products.length}} products</span>
        <select class="form-select w-auto" id="sortSelect">
          <option>Sort by: Featured</option>
          <option>Price: Low to High</option>
          <option>Price: High to Low</option>
        </select>
      </div>

      <div class="row">
        {{#each products}}
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-img-placeholder bg-secondary text-white d-flex align-items-center justify-content-center"
              style="height: 200px;">
              <span class="small">{{this.name}}</span>
            </div>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text small">{{this.description}}</p>
              <p class="fw-bold text-primary mt-auto">â‚¬{{this.price}}</p>
              <button class="btn btn-primary w-100 add-to-cart" data-id="{{this.id}}" data-name="{{this.name}}"
                data-price="{{this.price}}">
                Add to Cart
              </button>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>